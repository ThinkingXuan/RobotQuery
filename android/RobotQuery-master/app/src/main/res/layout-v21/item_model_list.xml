<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear_model_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!--clickable = false 意思不阻止父亲的点击事件-->

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:clickable="false"
        android:foreground="?android:attr/selectableItemBackground"
        android:stateListAnimator="@animator/touch_raise"
        app:cardPreventCornerOverlap="false"
        app:contentPadding="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_ic_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:src="@drawable/ic_queue_blue_500_24dp"/>

            <TextView
                android:id="@+id/tv_content_model_list_item"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/iv_ic_image"
                android:gravity="center_vertical"
                android:text="哈哈哈"
                android:textColor="@color/primary_text"
                android:textSize="16dp"
                />

            <TextView
                android:id="@+id/tv_time_model_list_item"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical"
                android:text="2017年4月9日"
                android:textColor="@color/secondary_text"
                android:textSize="13dp"

                />

        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>