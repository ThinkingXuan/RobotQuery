<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content"
    android:layout_width="match_parent"
    app:cardPreventCornerOverlap="false"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="8dp"
    app:contentPadding="0dp">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="姓名:"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_employee_username"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="尤旋"
                android:textIsSelectable="true"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="性别:"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_employee_gender"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="男"
                android:textIsSelectable="true"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="年龄:"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_employee_age_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="21"
                android:textIsSelectable="true"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="职位:"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_employee_position_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="老板"
                android:textIsSelectable="true"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="薪资:"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_employee_salary_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="2000000"
                android:textIsSelectable="true"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="center"
                android:text="部门:"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>

            <TextView
                android:id="@+id/tv_employee_department_detail"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:text="谷歌"
                android:textIsSelectable="true"
                android:textColor="@color/primary_text"
                android:textSize="16dp"/>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/tv_click_more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="共 "/>
            <TextView
                android:id="@+id/tv_data_card_count"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="10"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text=" 条"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginRight="20dp"
                android:gravity="right"
                android:text="点击查询更多"
                android:textColor="@color/secondary_text"
                android:textSize="16dp"/>
        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>
